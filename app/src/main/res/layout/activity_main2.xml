<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wood2"
    tools:context="com.darklightning.othello.Main2Activity"
    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/othello"
        android:id="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="92dp">
         <Button
             android:background="@drawable/multip"
             android:layout_width="match_parent"
             android:layout_height="55dp"
             android:id="@+id/button3"
             android:onClick="sendmessage" />

         <Button
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@drawable/singleplayer"
             android:id="@+id/button2"
             android:onClick="singleplayer" />
     </LinearLayout>


    </RelativeLayout>


    <Button
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:background="@drawable/inf"
        android:id="@+id/button"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:background="@drawable/exit"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />


</RelativeLayout>
